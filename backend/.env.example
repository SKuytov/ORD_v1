# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=partpulse_orders
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# JWT Configuration
JWT_SECRET=your_very_long_random_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.superhosting.bg
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=orders@partpulse.eu
